---
import Card from "./Card.astro";
import Phone from "../../public/images/phone-svgrepo-com.svg";
import { Image } from "astro:assets";
import Location from "../../public/images/location.svg";
import Mail from "../../public/images/mail-svgrepo-com.svg";
---

<section class="container">
  <div class="contact-us">
    <div class="contact">
      <h2 class="hurry">Hurry</h2>
      <h2 class="contact-us-heading">Contact Us</h2>
    </div>
    <div class="contact-sect">
      <div class="contact-inp">
        <form>
          <h3>GET IN TOUCH</h3>
          <div class="input">
            <label for="name">Your Name (required)</label><br />
            <input type="text" name="" id="" />
          </div>
          <div class="input">
            <label for="email">Your Email(required)</label><br />
            <input type="email" name="email" id="" />
          </div>
          <div class="input">
            <label for="subject">Subject</label><br />
            <input type="email" name="email" id="" />
          </div>
          <div class="input">
            <label for="message">Your Message</label><br />
            <textarea name="" id="" cols="30" rows="10"></textarea>
          </div>
          <button class="btn send-btn">Send</button>
        </form>
      </div>
      <div class="contact-card">
        <Card dark={true}>
          <h3 class="address">Address</h3>
          <div class="add">
            <div class="location-icon">
              <Image src={Location} alt="" class="icon" />
              <div class="icon-para">
                <p>34c Refinery Road, Victoria Street, NYC.</p>
              </div>
            </div>
            <div class="phone-icon">
              <Image src={Phone} alt="" class="icon" />
              <div class="icon-para">
                <p>+ 45 345 678 982</p>
              </div>
            </div>
            <div class="mail-icon">
              <Image src={Mail} alt="" class="icon" />
              <div class="icon-para">
                <p>info@example.com</p>
              </div>
            </div>
          </div>
        </Card>
      </div>
    </div>
  </div>

  <style>
    form h3 {
      text-align: justify;
      margin: 30px 0;
    }
    .contact {
      margin: 70px 0;
    }
    .contact-us {
      text-align: center;
    }

    .contact-sect {
      display: flex;
      /* align-items: center; */
      width: 100%;
      margin: 50px 0;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .contact-inp {
      width: 70%;
      height: 75vh;
    }

    form {
      margin: 30px 80px;
    }

    label {
      color: #6a6a6a;
    }

    .input {
      display: block;
      text-align: left;
      margin-bottom: 10px;
    }

    .input input {
      width: 100%;
      height: 3rem;
      border: 1px solid #e2e2e2;
      padding-left: 10px;
      font-size: 14px;
    }

    textarea {
      width: 100%;
      height: 5rem;
      border: 1px solid #e2e2e2;
    }

    .send-btn {
      width: 150px;
      display: block;
    }

    .contact-card {
      width: 30%;
      text-align: left;
      height: 75vh;
    }

    .hurry {
      font-family: "Herr Von Muellerhoff", cursive;
      font-size: 70px;
      letter-spacing: 8px;
      font-weight: lighter;
      color: var(--color-secondary);
    }

    .contact-us-heading {
      letter-spacing: 8px;
    }

    .address {
      margin-top: 30px;
    }

    .phone-icon,
    .location-icon,
    .mail-icon {
      margin-top: 50px;
      display: flex;
      align-items: center;
    }

    .icon-para {
      margin-left: 15px;
    }

    .icon {
      width: 50px;
      height: 50px;
      border-radius: 50%;
    }

    @media screen and (max-width: 1024px) {
      form {
        margin: 30px 60px;
      }
    }

    @media screen and (max-width: 900px) {
      .location-icon,
      .phone-icon,
      .mail-icon {
        margin-top: 20px;
      }

      .icon {
        width: 30px;
        height: 30px;
      }
    }

    @media screen and (max-width: 768px) {
      form {
        margin: 30px 40px;
      }

      .address {
        margin-top: 10px;
        text-align: center;
      }

      .location-icon,
      .phone-icon,
      .mail-icon {
        display: block;
        text-align: center;
      }
    }

    @media screen and (max-width: 600px) {
      .contact-sect {
        flex-direction: column-reverse;
      }

      .contact-inp,
      .contact-card {
        width: 100%;
      }

      .contact-card {
        height: 60vh;
      }
    }
  </style>
</section>
